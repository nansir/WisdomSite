<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1fa0a0a0"
    android:orientation="vertical"
    tools:context=".view.PersonnelUploadActivity">

    <include layout="@layout/item_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/btn_cancel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_required"
                android:drawablePadding="4dp"
                android:text="姓名(中文)："
                android:textColor="#db000000"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/tv_name_zh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="請輸入"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textColor="#000000"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/btn_cancel"
            android:background="@color/colorLine" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@id/btn_cancel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_required"
                android:drawablePadding="4dp"
                android:text="姓名(英文)："
                android:textColor="#db000000"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_name_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="請輸入"
                android:lines="1"
                android:paddingLeft="6dp"
                android:textColor="#000000"
                android:textSize="13sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="68dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/colorLine"
            android:drawableTop="@mipmap/ic_camera"
            android:drawablePadding="-40dp"
            android:paddingTop="40dp"
            android:text="點擊添加照片"
            android:textColor="@color/white"
            android:textSize="9sp" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape_corner_black"
        android:text="提交信息"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>